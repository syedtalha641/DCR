@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="content px-3 py-2">
    <div class="container-fluid">
        <div class="mb-3">
            <div class="form-inline justify-content-between col-md-12 mb-2">
                <div class="button">
                    <button type="button" data-toggle="modal" data-target="#exampleModalCenter"
                            class="btn btn-primary btn-sm mb-2">
                        <i class="fa-solid fa-plus"></i> Add
                    </button>
                </div>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title float-start" id="exampleModalLongTitle">ADD CUSTOMER</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="formTopbar">
                                    <div class="row ">
                                        <div class="col-md-6">
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CUSTOMER ID
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CUSTOMER Name
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CUSTOMER TYPE
                                                </div>
                                                <select class="form-select form-select-sm"
                                                        aria-label=".form-select-sm example">
                                                    <option selected>All</option>
                                                    <option value="1">NOT KNOWN</option>
                                                    <option value="2">NOT KNOWN</option>
                                                    <option value="3">NOT KNOWN</option>
                                                </select>
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CUSTOMER
                                                    EMAIL
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CUSTOMER
                                                    PHONE
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>
                                        </div>

                                        <div class="col-md-6">

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    ADDRESS
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    COUNTRY
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    STATE
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    CITY
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>

                                            <div class="input-group input-group-sm mb-3">
                                                <div class="input-group-text col-sm-4 txtSize">
                                                    POSTAL CODE
                                                </div>
                                                <input type="text" class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary m-2 col-md-2">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-------------- Table ----------------->
            <div class="container-fluid">
                <div class="tablecard small col-md-12">
                    <table id="myTable" class="table table-striped table-bordered small">
                        <thead>
                            <tr class="font-weight-bold">
                                <td>Customer ID</td>
                                <td>Customer Name</td>
                                <td>Customer Type Type</td>
                                <td>Customer Email</td>
                                <td>Customer Phone</td>
                                <td>Customer Address</td>
                                <td>Customer Country</td>
                                <td>Customer State</td>
                                <td>Customer City</td>
                                <td>Customer Postal Code</td>
                                <td>Edit</td>
                                <td>Delete</td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
